        <td>Fecha Nota:</td>
        <td>@Html.TextBoxFor(x => x.FechaNota)</td>
    </tr>
    <tr>
        <td>Nombre Nota:</td>
        <td>@Html.TextBoxFor(x => x.NombreNota)</td>
    </tr>
    <tr>
        <td>Nota</td>
        <td>@Html.TextBoxFor(x => x.Nota)</td>
    </tr>
    <tr>
        <td>Porcentaje Nota Corte:</td>
        <td>@Html.TextBoxFor(x => x.PorcentajeCorte)</td>
    </tr>
    <tr>
        <td>Corte</td>
        <td>@Html.TextBoxFor(x => x.Corte)</td>
    </tr>
    <tr>
        <td>Curso:</td>
        <td>@Html.TextBoxFor(x => x.IdCurso)</td>
