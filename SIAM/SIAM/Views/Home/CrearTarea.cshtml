    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#FechaEntregaTarea").datepicker({ dateFormat: 'yy-mm-dd' });
        });
    </script>

    }

<h2>CrearTarea</h2>

@using (Html.BeginForm("GuardarTarea","Home")){
<table>
    <tr>
        <td>Curso:</td>
        <td>@Html.DropDownListFor(x => x.IdCurso,ViewData["Cursos"] as IEnumerable<SelectListItem>)</td>
    </tr>
    <tr>
        <td>Nombre Tarea</td>
        <td>@Html.TextBoxFor(x => x.NombreTarea)</td>
    </tr>
    <tr>
        <td>Descripcion Tarea</td>
        <td>@Html.TextBoxFor(x=> x.DescripcionTarea)</td>
    </tr>
    <tr>
        <td>Fecha Entrega</td>
        <td>@Html.TextBoxFor(x=> x.FechaEntregaTarea)</td>
    </tr>
    <tr>
        <td><button type="submit">Guardar</button></td>
    </tr>
</table>
}


