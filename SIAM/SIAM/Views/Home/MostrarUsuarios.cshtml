
@{
    ViewBag.Title = "MostrarUsuarios";
    var data = ViewData["usuarios"] as List<SIAM.Model.Entities.Usuario>;
}

@section scripts{
<link href="~/Content/TableCSSCode.css" rel="stylesheet" />

    <style type="text/css">

        .table {
            border:2px solid
        }
        thead {
            text-align:center;
            border:2px solid;

        }
        th {
            text-align:center;
            margin:0;
            padding:0;
        }
        tr {
            border:1px solid;
            text-align:center;
            margin:0;
            padding:0;
        }
        td {
            border:1px solid;
            text-align:center;
            margin:0;
            padding:0;
        }

    </style>

    }

<h2>Mostrar Estudiantes</h2>
<br />
<table>
    <thead>
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Cedula</th>
            <th>Email</th>
            <th>Carrera</th>
            <th>Telefono</th>
            <th colspan="3" style="text-align:center">Acciones</th>
        </tr>
    </thead>
    @foreach (SIAM.Model.Entities.Usuario u in data) {
        <tr>
            <td>@u.Nombres</td>
            <td>@u.Apellidos</td>
            <td>@u.Cedula</td>
            <td>@u.Email</td>
            <td>@u.Carrera</td>
            <td>@u.Telefono</td>
            <td>@Html.ActionLink("Modificar", "ModificarUsuario", "Home", new {id = @u.Cedula },null)</td>
            <td>@Html.ActionLink("Agregar Nota","CrearNotas","Home", new {id= @u.Cedula }, null)</td>
            <td>@Html.ActionLink("Eliminar","EliminarEstudiante","Home", new {id= @u.Cedula }, null)</td>
        </tr>
    }
</table>

